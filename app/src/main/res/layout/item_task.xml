<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDefaultWhite"
                android:clipToPadding="false"
                android:id="@+id/rv_doc"
    >

    <RelativeLayout
        android:id="@+id/attachment_doc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#ffffff"
        card_view:cardCornerRadius="0dp"
        android:layout_marginBottom="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#ffffff">




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:id="@+id/tv_task_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Надо связаться с клиентом и сообщить о том, что он должен денег"
                    android:textSize="12sp"
                    android:textColor="@android:color/primary_text_light"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/tv_task_date"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/tv_task_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:text="01.10.18"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    />

            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>